<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="InefficientWeight">
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />
    </LinearLayout>
    <LinearLayout
       style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="@string/ac"
            android:id="@+id/btnAC">
        </Button>
        <Button
        style="@style/buttonNumber">
        </Button>
        <Button
        style="@style/buttonNumber">
        </Button>
        <Button
        style="@style/buttonOperations"
            android:text="/"
            android:id="@+id/btnDivide">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="7"
            android:id="@+id/btn7">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="8"
            android:id="@+id/btn8">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="9"
            android:id="@+id/btn9">
        </Button>
        <Button
            style="@style/buttonOperations"
            android:text="X"
            android:id="@+id/btnMul">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="4"
            android:id="@+id/btn4">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="5"
            android:id="@+id/btn5">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="6"
            android:id="@+id/btn6">
        </Button>
        <Button
            style="@style/buttonOperations"
            android:text="-"
            android:id="@+id/btnMinus">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="3"
            android:id="@+id/btn3">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="2"
            android:id="@+id/btn2">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="1"
            android:id="@+id/btn1">
        </Button>
        <Button
            style="@style/buttonOperations"
            android:text="+"
            android:id="@+id/btnPlus">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="."
            android:id="@+id/btnDot">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:text="0"
            android:id="@+id/btn0">
        </Button>

        <Button
            android:id="@+id/btnEqual"
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:background="@color/orange"
            android:text="="
            android:textColor="#455A64"></Button>
    </LinearLayout>

</LinearLayout>